{
    "extends": "idiomatic",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 1,
        "one-var": 0,
        "no-console": 0,
        "no-undef": 0,
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never"
            }]
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "$": true,
        "App": true
    }
}
